{
  "manifest_version": 3,
  "name": "Easy Apply",
  "version": "1.0.0",
  "description": "A basic example extension with only required keys",
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-48.png"
  },
  "content_scripts": [
    {
      "js": [
        "content_scripts/init.js"
      ],
      "matches": [
        "http://*.example.com/"
      ]
    }
  ],
  "action": {
    "default_popup": "./frontend/dist/index.html"
  },
  "permissions": ["scripting", "activeTab"]
}
